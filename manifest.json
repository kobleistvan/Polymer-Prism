{
    "manifest_version": 2,
    "name": "Polymer Prism",
    "version": "1.0",

    "default_locale": "en",
    "description": "Look through Polymer 1 & 2 web components through a prism. View and modify component properties on the fly through chrome developer tools.",
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },

    "browser_action": {
        "default_popup": "hello.html",
        "default_icon": "icon128.png"
    },

    "background": {
        "persistent": false,
        "scripts": ["prism.js"]
    },

    "devtools_page": "prism.html",
    "offline_enabled": true,
    "permissions": ["tabs", "http://*/*", "https://*/*"]
}